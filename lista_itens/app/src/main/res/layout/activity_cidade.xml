<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CidadeActivity">

    <TextView
        android:id="@+id/lbNome"
        android:layout_width="368dp"
        android:layout_height="47dp"
        android:text="Cidade"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvNome"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="368dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/lbPopulacao"
        app:layout_constraintTop_toBottomOf="@+id/lbNome"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/lbPopulacao"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:text="População"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvPopulacao"
        app:layout_constraintTop_toBottomOf="@+id/tvNome"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/tvPopulacao"
        android:layout_width="368dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/lbArea"
        app:layout_constraintTop_toBottomOf="@+id/lbPopulacao"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/lbArea"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:text="Area"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvArea"
        app:layout_constraintTop_toBottomOf="@+id/tvPopulacao"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/tvArea"
        android:layout_width="368dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/lbDensidade"
        app:layout_constraintTop_toBottomOf="@+id/lbArea"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/lbDensidade"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:text="Densidade"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvDensidade"
        app:layout_constraintTop_toBottomOf="@+id/tvArea"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/tvDensidade"
        android:layout_width="368dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/btVoltar"
        app:layout_constraintTop_toBottomOf="@+id/lbDensidade"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btVoltar"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:onClick="voltar"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDensidade"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>