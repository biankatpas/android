<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">

    <EditText
        android:id="@+id/edMatricula"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMatricula"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Matricula do Funcionário"
        android:inputType="number"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edNome"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edMatricula"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="-1dp"
        android:ems="10"
        android:hint="Nome Completo"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edLotacao"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edMatricula"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:hint="Lotação (Departamento)"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edFuncao"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edMatricula"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="315dp"
        android:ems="10"
        android:hint="Função (Cargo)"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/linear_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:orientation="vertical" />

</RelativeLayout>